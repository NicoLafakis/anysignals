# =============================================================================
# AnySignals Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
PORT=3456
NODE_ENV=production

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
# Use existing Redis on this VPS if available
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# AnySite API Configuration
# -----------------------------------------------------------------------------
# Your AnySite API JWT token (get from AnySite dashboard)
ANYSITE_API_KEY=your_anysite_jwt_token_here

# AnySite API base URL
ANYSITE_BASE_URL=https://mcp.anysite.io/mcp

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Secret key for validating incoming webhook requests
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
WEBHOOK_SECRET=your_webhook_secret_here

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
# Milliseconds between processing jobs (10000 = 1 job per 10 seconds = 6/min)
DRIP_INTERVAL_MS=10000

# Maximum records per batch request (prevents abuse)
MAX_BATCH_SIZE=2000

# -----------------------------------------------------------------------------
# Results Storage
# -----------------------------------------------------------------------------
# How long to keep results in Redis (seconds) - default 24 hours
RESULT_TTL_SECONDS=86400

# -----------------------------------------------------------------------------
# Callback Configuration
# -----------------------------------------------------------------------------
# Number of retry attempts for failed webhook callbacks
CALLBACK_MAX_RETRIES=3

# Base delay for exponential backoff (milliseconds)
CALLBACK_RETRY_DELAY_MS=1000

# Timeout for callback requests (milliseconds)
CALLBACK_TIMEOUT_MS=10000
